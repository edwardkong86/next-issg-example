{
	"extends": ["airbnb-base"],
	"env": {
		"jest": true
	},
	"root": true,
	"rules": {
		"arrow-parens": ["warn", "as-needed"],
		"operator-linebreak": 0,
		"object-curly-newline": 0,
		"curly": 0,
		"nonblock-statement-body-position": 0,
		"no-param-reassign": 0,
		"consistent-return": 0,
		"global-require": 0,
		"no-confusing-arrow": 0,
		"max-len": 0,
		"indent": 0,
		"import/prefer-default-export": 0,
		"implicit-arrow-linebreak": 0,
		"no-unused-expressions": 0,
		"no-tabs": 0,
		"valid-typeof": 0,
		"no-underscore-dangle": 0,
		"no-throw-literal": 0,
		"quotes": ["error", "double"]
	},
	"overrides": [
		{
			"files": ["*.test.js"],
			"rules": {
				"no-undef": 0,
				"no-console": 0
			}
		}
	],
	"settings": {
		"import/resolver": {
			"babel-module": {
				"alias": {
					"~controllers": "./controllers",
					"~database": "./database",
					"~env": "../env",
					"~helpers": "./helpers",
					"~middlewares": "./middlewares",
					"~models": "./models",
					"~routes": "./routes",
					"~seeds": "./seeds"
				}
			}
		}
	}
}
