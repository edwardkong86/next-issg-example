{
	"name": "nextjs-ssr-kit",
	"version": "0.1.0",
	"description": "A fullstack MERN SSR boilerplate.",
	"repository": "https://github.com/mattcarlotta/nextjs-ssr-kit",
	"author": "Matt Carlotta",
	"license": "MIT",
	"private": false,
	"scripts": {
		"compile": "rimraf build && babel ./server -d build --no-comments --ignore **/__tests__,**/__mocks__,coverage,setupTests.js,.next,components,images,pages,public,next.config.js,babel.config.js",
		"checkbuild": "es-check  es5 './.next/static/**/*.js'",
		"dev": "cross-env NODE_ENV=development nodemon --exec babel-node ./server/app.js",
		"build": "rimraf .next/static && next build",
		"production": "npm run build && npm run compile",
		"start": "cross-env NODE_ENV=production node ./build/app.js",
		"test": "npm run test:back && npm run test:front",
		"test:back": "NODE_ENV=test jest --config ./server/jest.json",
		"test:backcov": "NODE_ENV=test jest --config ./server/jest.json --coverage",
		"test:backwatch": "NODE_ENV=test jest --config ./server/jest.json --passWithNoTests --watchAll",
		"test:front": "NODE_ENV=test jest --config ./jest.json",
		"test:frontcov": "NODE_ENV=test jest --config ./jest.json --coverage",
		"test:frontwatch": "NODE_ENV=test jest --config ./jest.json --watch --onlyChanged",
		"test:frontwatchall": "NODE_ENV=test jest --config ./jest.json --watchAll"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run test"
		}
	},
	"dependencies": {
		"axios": "^0.19.0",
		"bluebird": "^3.7.2",
		"body-parser": "^1.19.0",
		"chalk": "^3.0.0",
		"compression": "^1.7.4",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"lodash": "^4.17.15",
		"moment-timezone": "^0.5.27",
		"mongoose": "^5.8.3",
		"morgan": "^1.9.1",
		"next": "9.1.6",
		"next-redux-saga": "^4.1.2",
		"next-redux-wrapper": "^4.0.1",
		"react": "16.12.0",
		"react-dom": "16.12.0",
		"react-icons": "^3.8.0",
		"react-redux": "^7.1.3",
		"react-toastify": "^5.5.0",
		"redux": "^4.0.5",
		"redux-saga": "^1.1.3",
		"styled-components": "^4.4.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.7.7",
		"@babel/core": "^7.7.7",
		"@babel/node": "^7.7.7",
		"@zeit/next-css": "^1.0.1",
		"@zeit/next-sass": "^1.0.1",
		"axios-mock-adapter": "^1.17.0",
		"babel-jest": "^24.9.0",
		"babel-plugin-lodash": "^3.3.4",
		"babel-plugin-module-resolver": "^4.0.0",
		"babel-plugin-styled-components": "^1.10.6",
		"browserslist": "^4.8.2",
		"cross-env": "^6.0.3",
		"css-loader": "^3.4.0",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.2",
		"es-check": "^5.1.0",
		"extracted-loader": "^1.0.7",
		"file-loader": "^5.0.2",
		"husky": "^3.1.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^24.9.0",
		"jest-css-modules-transform": "^3.1.0",
		"jest-enzyme": "^7.1.2",
		"jest-haste-map": "^24.9.0",
		"jest-resolve": "^24.9.0",
		"jest-styled-components": "^6.3.4",
		"jsdom": "^15.2.1",
		"mini-css-extract-plugin": "^0.9.0",
		"node-sass": "^4.13.0",
		"nodemon": "^2.0.2",
		"postcss-flexbugs-fixes": "^4.1.0",
		"postcss-loader": "^3.0.0",
		"postcss-normalize": "^8.0.1",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^1.19.1",
		"prop-types": "^15.7.2",
		"redux-devtools-extension": "^2.13.8",
		"redux-saga-test-plan": "^4.0.0-rc.3",
		"sass-loader": "^8.0.0",
		"supertest": "^4.0.2",
		"url-loader": "^3.0.0",
		"webpack": "^4.41.5"
	}
}
